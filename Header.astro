---
import { Image } from 'astro:assets';
import astroLogo from '../assets/astro.svg';
---

<header class="fixed w-full bg-white/80 backdrop-blur-md shadow-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <Image src={astroLogo} alt="Astro Logo" width={32} height={32} />
          <span class="ml-3 text-xl font-semibold text-gray-900">Astro Site</span>
        </a>
      </div>
      <nav class="hidden md:block">
        <ul class="flex space-x-8">
          <li><a href="#features" class="text-gray-700 hover:text-gray-900">Features</a></li>
          <li><a href="#about" class="text-gray-700 hover:text-gray-900">About</a></li>
          <li><a href="https://docs.astro.build" class="text-gray-700 hover:text-gray-900">Docs</a></li>
        </ul>
      </nav>
      <div class="flex items-center">
        <a
          href="https://github.com/withastro/astro"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700"
        >
          GitHub
        </a>
      </div>
    </div>
  </div>
</header>